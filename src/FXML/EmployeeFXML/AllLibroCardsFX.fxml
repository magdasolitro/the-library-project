<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.EmployeeController.AllLibroCardsPageFXController">

    <children>
        <SplitPane dividerPositions="0.7" prefHeight="700.0" prefWidth="1300.0">
            <items>
                <AnchorPane fx:id="leftPane" minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0" style="-fx-background-color: #FFFFFF;">
                    <children>
                        <Label layoutX="90.0" layoutY="50.0" text="LibroCards">
                            <font>
                                <Font name="Avenir Next Bold" size="70.0" />
                            </font>
                        </Label>
                        <Button fx:id="goBackButton" mnemonicParsing="false" onMouseClicked="#handleGoBackButton" prefHeight="40.0" prefWidth="70.0">
                            <font>
                                <Font name="Avenir Book" size="17.0" />
                            </font>
                        </Button>
                    </children>
                </AnchorPane>
                <AnchorPane fx:id="rightPane" minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="777.0" style="-fx-background-color: #FFFFFF;">
                    <children>
                        <Label layoutX="50.0" layoutY="200.0" text="Search by:">
                            <font>
                                <Font name="Avenir Next Bold" size="25.0" />
                            </font>
                        </Label>
                        <TextField fx:id="searchField" layoutX="50.0" layoutY="435.0" prefHeight="36.0" prefWidth="280.0">
                            <font>
                                <Font name="Avenir Book" size="17.0" />
                            </font>
                        </TextField>
                        <RadioButton fx:id="userEmailRB" layoutX="80.0" layoutY="260.0" mnemonicParsing="false" text="user e-mail">
                            <font>
                                <Font name="Avenir Book" size="17.0" />
                            </font>
                        </RadioButton>
                        <RadioButton fx:id="cardIDRB" layoutX="80.0" layoutY="300.0" mnemonicParsing="false" text="cardID">
                            <font>
                                <Font name="Avenir Book" size="17.0" />
                            </font>
                        </RadioButton>
                        <Button fx:id="searchButton" layoutX="117.0" layoutY="493.0" mnemonicParsing="false" onMouseClicked="#handleLibroCardSearch" prefHeight="40.0" prefWidth="146.0" style="-fx-background-color: #3CB371;" text="Search!" textFill="WHITE">
                            <font>
                                <Font name="Avenir Next Bold" size="17.0" />
                            </font>
                        </Button>
                    </children>
                </AnchorPane>
            </items>
        </SplitPane>
    </children>
</AnchorPane>
