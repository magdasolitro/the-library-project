<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="anchorPane" prefHeight="700.0" prefWidth="1300.0" style="-fx-background-color: #ffffff;" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.UserController.UserCartPageFXController">
   <children>
      <SplitPane dividerPositions="0.7" prefHeight="700.0" prefWidth="1300.0">
         <items>
            <AnchorPane fx:id="leftPane" minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0" style="-fx-background-color: #FFFFFF;">
               <children>
                  <Label layoutX="90.0" layoutY="50.0" text="Your cart">
                     <font>
                        <Font name="Avenir Next Bold" size="70.0" />
                     </font>
                  </Label>
                  <Button fx:id="goBackButton" mnemonicParsing="false" onMouseClicked="#handleGoBackButton" prefHeight="40.0" prefWidth="70.0">
                     <font>
                        <Font name="Avenir Book" size="17.0" />
                     </font>
                  </Button>
               </children>
            </AnchorPane>
            <AnchorPane fx:id="rightPane" minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="777.0" style="-fx-background-color: #FFFFFF;">
               <children>
                  <Button fx:id="checkOutButton" layoutX="100.0" layoutY="430.0" mnemonicParsing="false" onMouseClicked="#handleCheckOut" prefHeight="50.0" prefWidth="185.0" style="-fx-background-color: #3CB371;" text="Check Out" textFill="WHITE">
                     <font>
                        <Font name="Avenir Next Bold" size="20.0" />
                     </font>
                  </Button>
                  <Label layoutX="100.0" layoutY="320.0" text="TOTAL:">
                     <font>
                        <Font name="Avenir Next Bold" size="25.0" />
                     </font>
                  </Label>
               </children>
            </AnchorPane>
         </items>
      </SplitPane>
   </children>
</AnchorPane>
