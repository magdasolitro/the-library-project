<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="700.0" prefWidth="1000.0" style="-fx-background-color: #BBA5E1;"
            xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controller.UserController.UserLoginFXController">
    <Button fx:id="goBackButton" mnemonicParsing="false" onMouseClicked="#handleGoBackButtonClick" prefHeight="40.0"
            prefWidth="70.0">
        <font>
            <Font name="Avenir Book" size="17.0"/>
        </font>
    </Button>
    <Pane fx:id="pane" layoutX="318.0" layoutY="127.0" prefHeight="485.0" prefWidth="664.0"
          style="-fx-background-color: #FFFFFF; -fx-border-radius: 30 30 30 30; -fx-background-radius: 30 30 30 30;">
        <Label id="LoginAsUserText" alignment="CENTER" contentDisplay="CENTER" layoutY="48.0" prefHeight="87.0"
               prefWidth="664.0" style="-fx-background-color: #ffffff;" text="Login as User" textAlignment="RIGHT">
            <font>
                <Font name="Avenir Next Bold" size="60.0"/>
            </font>
        </Label>
        <TextField fx:id="userEmailField" layoutX="207.0" layoutY="200.0" prefHeight="33.0" prefWidth="250.0"
                   promptText="e-mail">
            <font>
                <Font name="Avenir Book" size="15.0"/>
            </font>
        </TextField>
        <PasswordField fx:id="userPasswordField" layoutX="207.0" layoutY="262.0" prefHeight="33.0" prefWidth="250.0"
                       promptText="password">
            <font>
                <Font name="Avenir Book" size="15.0"/>
            </font>
        </PasswordField>
        <Button fx:id="loginButton" layoutX="255.0" layoutY="342.0" mnemonicParsing="false"
                onMouseClicked="#handleLoginRequest" prefHeight="44.0" prefWidth="155.0"
                style="-fx-background-color: #3CB371;" text="Log In" textFill="WHITE">
            <font>
                <Font name="Avenir Next Bold" size="20.0"/>
            </font>
        </Button>
    </Pane>
</AnchorPane>
